{
  "name": "ghost",
  "version": "1.0.0",
  "description": "graphql learn repo",
  "main": "app.js",
  "scripts": {
    "start": "npm run build && node dist/app.js",
    "dev": "nodemon src/app.ts",
    "ts": "ts-node src/app.ts",
    "clean": "rimraf dist/",
    "copy": "copyfiles -u 1 src/**/*.graphql src/**/*.json dist/",
    "build": "npm run clean && concurrently \"tsc\" \"npm run copy\"",
    "lint": "eslint src --ext ts",
    "lint-fix": "eslint . --ext .ts --fix",
    "prettier-format": "prettier --config .prettierrc src/**/*.ts --write",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "mukhtar",
  "license": "ISC",
  "dependencies": {
    "@graphql-tools/schema": "^8.3.10",
    "@graphql-tools/utils": "^8.6.9",
    "apollo-server-core": "^3.6.7",
    "apollo-server-express": "^3.6.7",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "graphql": "^16.3.0",
    "graphql-import-node": "^0.0.4",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mongodb": "^4.5.0",
    "mongoose": "^6.3.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash": "^4.14.182",
    "@types/node": "^17.0.25",
    "concurrently": "^7.1.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  }
}
